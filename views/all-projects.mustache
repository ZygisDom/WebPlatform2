<html lang="en">

<head>
  {{>header}}
</head>

<body class="container">

  <h1 class="display-4">{{title}}</h1>
  <h2 class="display-5">Projects in Progress</h2>

    <div class="text-right">
	
		<div class="btn-group dropup position-sticky" id="view-project">
    <button type="button" class="btn btn-secondary dropdown-toggle btn-color" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        View Shared Project
    </button>
    <div class="dropdown-menu">
        <form  method="post" role="form">
            <div class="form-group">
                <label for="projectLink" class="mx-auto d-flex justify-content-center" style="margin: 10px 0 !important;">View Project</label>
                <input type="name" class="form-control mx-auto d-flex justify-content-center" name="projectLink" id="projectLink" aria-describedby="emailHelp">
            </div>
            <button type="submit" class="btn btn-primary mx-auto d-flex justify-content-center" id="ViewProject">View Project</button>
        </form>
    </div>
</div>
	
	
      <a href="/add" class="btn btn-primary">
        Add a new project
      </a>
    </div>

    <div class="text-left" style="margin-bottom: 1em;">
      <br>

      {{#projects}}
          <div class="card">
              <h5 class="card-header">
                  Project Name: {{project}}
                  <a href="delete/{{project}}"><i class="fa fa-trash fa-lg"></i></a>
                  <a href="edit/{{project}}"><i class="fa fa-edit fa-lg"></i></a>
              </h5>

              <div class="card-body">
                  <div class="card-text">
                      Module: {{module}}
                  </div>
                  <div class="card-text">
                      Intended Completion Date: {{intendedDate}}
                  </div>
                  <div class="card-text">
                      Tasks: <br>
                      {{#tasks}}
                          <ul>
                          {{#.}}
                              <li>{{task}}</li>
                          {{/.}}
                          </ul>
                      {{/tasks}}
                  </div>
              </div>
              <div class="card-footer">
                  <b>Actual Due Date: {{actualDueDate}}</b>
                  <br>
				  <b>Shareable Link: {{_id}}</b>
              </div>
          </div>
      <br>
      </div>
      {{/projects}}

    </div>
</body>

</html>